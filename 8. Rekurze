#####################
# 8.1.1. Součet čísel
#####################
def series_sum(n):
    if n == 0:
        return 0
    else:
        soucet = n + series_sum(n-1)
        return soucet

print(series_sum(1))     # 1
print(series_sum(5))     # 15
print(series_sum(10))    # 55
print(series_sum(100))   # 5050
